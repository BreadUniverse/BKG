<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E6"
    tools:context=".LoginDispatcherActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burgercrown" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TASTE IS KING"
        android:fontFamily="@font/insani_bc"
        android:textColor="#583924"
        android:textSize="40sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/flame_bold"
        android:text="Deliver Favorite Food"
        android:textColor="#583924"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/insani_bc"
        android:text="Log In"
        android:textColor="#0066B2"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/sign_in_dispatcher_email"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="#583924"
        android:textColorHint="	#96775d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/sign_in_dispatcher_pass"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Password"
        android:textColor="#583924"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColorHint="#96775d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_dispatcher_email" />

    <TextView
        android:id="@+id/go_signup_dispatcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato"
        android:text="Don't have an account yet?"
        android:textColor="#583924"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dispatcher_login" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dispatcher_login"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/next_btn"
        android:elevation="3dp"
        android:fontFamily="@font/flame_bold"
        android:gravity="center"
        android:outlineAmbientShadowColor="#d6b685"
        android:outlineSpotShadowColor="#96775d"
        android:text="Log In"
        android:textColor="#fff2cc"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_dispatcher_pass"
        tools:targetApi="p"/>
</androidx.constraintlayout.widget.ConstraintLayout>