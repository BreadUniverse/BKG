<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burgerr" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/flame_bold"
        android:text="Enjoy Restaurant Quality Meals\nat Home"
        android:textAlignment="center"
        android:textColor="#583924"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/lato"
        android:text="Created by\nMariaN"
        android:textAlignment="center"
        android:textColor="#583924"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_user_btn"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/next_btn"
        android:elevation="3dp"
        android:fontFamily="@font/flame_bold"
        android:gravity="center"
        android:outlineAmbientShadowColor="#d6b685"
        android:outlineSpotShadowColor="#96775d"
        android:text="Client"
        android:textColor="#fff2cc"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_courier_btn"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/next_btn"
        android:elevation="3dp"
        android:fontFamily="@font/flame_bold"
        android:gravity="center"
        android:outlineAmbientShadowColor="#d6b685"
        android:outlineSpotShadowColor="#96775d"
        android:text="Courier"
        android:textColor="#fff2cc"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/go_user_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_dispatcher_btn"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/next_btn"
        android:elevation="3dp"
        android:fontFamily="@font/flame_bold"
        android:gravity="center"
        android:outlineAmbientShadowColor="#d6b685"
        android:outlineSpotShadowColor="#96775d"
        android:text="Dispatcher"
        android:textColor="#fff2cc"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/go_courier_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/go_dispatcher_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>